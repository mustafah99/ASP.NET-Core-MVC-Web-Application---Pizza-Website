@model IEnumerable<Grupparbete.Models.Pizzas>

@{
    ViewData["Title"] = "Vår Meny";
}

<div style="font-family: 'Alatsi', sans-serif; text-transform: uppercase; font-weight: bold; color: white; text-shadow: 0px 0px 12px #000;" class="text-center">
    <h2 class="display-2">@ViewData["Title"]</h2>
</div>

<div style="font-family: 'Alatsi', sans-serif; text-transform: uppercase; font-weight: bold; color: white; text-shadow: 0px 0px 12px #000;" class="text-center">
    <h2>Se våra underbara pizzor här.</h2>
</div>

<p style="font-family: 'Alatsi', sans-serif; text-transform: uppercase; font-weight: bold; color: white; text-shadow: 0px 0px 12px #000;">
    <a style="color: white;" asp-action="Create">Lägg Till Ny Pizza</a>
</p>

<table style="border: 2px solid white; font-family: 'Alatsi', sans-serif; text-transform: uppercase; font-weight: bold; color: white; text-shadow: 0px 0px 12px #000;" class="table">
    <thead style="border: 2px solid white;">
        <tr style="border: 2px solid white;">
            <th style="border: 2px solid white;">
                Pizza
            </th>
            <th style="border: 2px solid white;">
                Storlek
            </th>
            <th style="border: 2px solid white;">
                Pris
            </th>
        </tr>
    </thead>
    <tbody style="border: 2px solid white;">
        @foreach (var item in Model)
        {
            <tr style="border: 2px solid white;">
                <td style="border: 2px solid white;">
                    <a style="color: white;" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.PizzaName)</a>
                    
                </td>
                <td style="border: 2px solid white;">
                    @Html.DisplayFor(modelItem => item.PizzaSizes)
                </td>
                <td style="border: 2px solid white;">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            </tr>
        }
    </tbody>
</table>
